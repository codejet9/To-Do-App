<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous"/>
        <link href="/css/home_styles.css" rel="stylesheet">

        <title> <%= title %> </title>

    </head>

    <body>
        
        <header>
            <div class="container-fluid">
                <div class="row">
                    <div class="col"><h1>To-Do-App</h1></div>
                </div>
            </div>
        </header>

        <main>
            <div class="container-md">

                <form action="/add_task" method="POST">

                    <div class="input-group">
                        <span class="input-group-text bg-primary text-white">Description</span>
                        <input type="text" class="form-control" name="description" placeholder="What do you want to do?">
                    </div>

                    <div class="category-date">
                        <div class="input-group mt-2">
                            <label class="input-group-text bg-primary text-white" for="category">Category</label>
                            <select class="form-select" id="category" name="category">
                              <option value="personal">Personal</option>
                              <option value="work">Work</option>
                              <option value="cleaning">Cleaning</option>
                              <option value="others">Others</option>
                            </select>
                        </div>

                        <div class="input-group mt-2 ms-2">
                            <label class="input-group-text bg-primary text-white" for="deadline">Deadline</label>
                            <input id="deadline" class="form-control" type="date" name="deadline"/>
                        </div>
                    </div>

                    <div class="submit-button">
                        <button type="submit" class="btn btn-lg btn-success mt-3">Add Task</button>
                    </div>
                    
                </form>
            </div>


            <div class="container-md shadow-sm p-3 mb-5 bg-body-tertiary rounded">

                <ul class="list-group">
                    <% for(let i of task_list){%>
                        <li class="list-group-item d-flex justify-content-between align-items-start statusColor-<%=i.status%>">
                            <input class="mt-2 checkbox <%= i._id %> check-<%=i.status%>" style="width:1rem; height:1rem;"  type="checkbox" value="">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold strike-<%=i.status%>"><%=i.description%></div>
                                <span class="fas fa-calendar-check" style="color:teal"></span>
                                <%=i.deadline.toGMTString().substr(0,12)%>
                            </div>
                            <h4 class="category-del-margin"><span class="badge bg-warning mt-1"><%=i.category%></span></h4>
                            <a class="fas fa-window-close mt-2 del-btn" href="/delete_task/?id=<%= i._id %>"></a>
                        </li>
                    <% } %>
                  </ul>
            </div>

        </main>

        <footer>

        </footer>


        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>
        <script src="/js/script.js"></script>
    </body>
</html>